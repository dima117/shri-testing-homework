<div class="breadcrumbs">
    {{#each breadcrumbs}}
        {{#if href}}
            <a class="breadcrumbs__link" href="{{href}}">{{text}}</a> /
        {{else}}
            {{text}}
        {{/if}}
    {{/each}}
</div>

<div class="content content--files">
    <ul>
        {{#each files}}
            <li>
                <a class="files__link" href="{{href}}">{{name}}</a>
            </li>
        {{/each}}
    </ul>
</div>
