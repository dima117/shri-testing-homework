<div class="breadcrumbs">
    {{#each breadcrumbs}} {{#if href}}
    <a href="{{href}}">{{text}}</a> / {{else}}
    <span>{{text}}</span> {{/if}} {{/each}}
</div>

<div class="content">
    <ul>
        {{#each files}}
        <li>
            <a id="file-{{name}}" href="{{href}}">{{name}}</a>
        </li>
        {{/each}}
    </ul>
</div>