<div class="breadcrumbs">
    {{#each breadcrumbs}}
        {{#if href}}
            <a href="{{href}}">{{text}}</a> /
        {{else}}
            {{text}}
        {{/if}}
    {{/each}}
</div>

<div class="content content--file">
    <a class="content__link" href="{{parentHref}}">{{parentPath}}</a>

    <div class="file-content">{{content}}</div>
</div>